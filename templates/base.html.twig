<!doctype html>
<html lang="fr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link href="https://bootswatch.com/5/lumen/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    {% endblock %} <title>{% block title %} {% endblock %}</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{path('index')}}"><strong>Arras</strong></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Administration
                </a>
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MOD')%}


                <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                    <li><a class="dropdown-item" href="{{path('list-contact')}}">List des Contact</a></li>
                    <li><a class="dropdown-item" href="#">List des utilisateurs</a></li>
                    <li>
                    </li>
                </ul>{% endif %}
            </li>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('ajout-fichier')}}">Fichier
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('index')}}">Accueil
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('contact')}}">Contact
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('presentation')}}">Présentation de la ville</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Les services</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{path('ecoles')}}">Ecoles</a>
                            <a class="dropdown-item" href="{{path('carteID')}}">Carte d'identité</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Réseaux sociaux</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="https://www.facebook.com/VilleArras">Facebook</a>
                            <a class="dropdown-item" href="https://twitter.com/VilleArras">Twitter</a>
                            <a class="dropdown-item" href="https://www.instagram.com/villearras/?hl=fr">Instagram</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('avis')}}">Avis</a>
                    </li>
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %} <li class="nav-item">
                        <a class="nav-link text-white" href="{{path('app_login')}}">Se connecter
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="{{path('app_register')}}">S'inscrire
                        </a>
                    </li>
                    {% else %}
                    {% endif %}



                </ul>
            </div>
        </div>
    </nav>

    {% for message in app.flashes('notice') %}
    <h2 class=" alert alert-warning text-center mt-4 mb-4" role="alert">
        {{ message }}
    </h2>
    {% endfor %}

    {% block body %}{% endblock %}

    {% block javascripts %}
    <script src=" https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    {% endblock %}

</body>

</html>